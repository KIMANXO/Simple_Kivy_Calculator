#: import  utils kivy.utils 
<Root>

	BoxLayout:
		orientation: "vertical"
		size: root.width,root.height

		TextInput:

			id: score
			text: "0"
			halign : "right"
			font_size: 96
			size_hint: (1, .20)
			multiline: False
			
			
		GridLayout:
			size: root.width,root.height
			cols: 4
			rows: 5

			Button:
				size_hint: (0.2,0.2)
				font_size: 64
				color: utils.get_color_from_hex('000000')
				text: "CE"
				background_normal:''
				background_color: utils.get_color_from_hex('03fc84')
				on_press: root.clear()
			Button:
				id: clear
				size_hint: (0.2,0.2)
				font_size: 64
				color: utils.get_color_from_hex('000000')
				text: "C"	
				background_normal:''
				background_color: utils.get_color_from_hex('03fc84')
				on_press: root.clear()

			Button:
				
				size_hint: (0.2,0.2)
				font_size: 64
				color: utils.get_color_from_hex('000000')
				text: u"\u00AB"
				background_normal:''
				background_color: utils.get_color_from_hex('03fc84')
				on_press: root.remove()

			Button:
				size_hint: (0.2,0.2)
				font_size: 64
				color: utils.get_color_from_hex('000000')
				text: "/"
				background_normal:''
				background_color: utils.get_color_from_hex('03fc84')
				on_press: root.divide_sign()

			Button:
				size_hint: (0.2,0.2)
				font_size: 64
				color: utils.get_color_from_hex('03fc84')
				text: "7"
				background_color: utils.get_color_from_hex('000000')
				on_press: root.button_press(7)

			Button:
				size_hint: (0.2,0.2)
				font_size: 64
				color: utils.get_color_from_hex('03fc84')
				text: "8"	
				background_color: utils.get_color_from_hex('000000')
				on_press: root.button_press(8)

			Button:
				size_hint: (0.2,0.2)
				font_size: 64
				color: utils.get_color_from_hex('03fc84')
				text: "9"
				background_color: utils.get_color_from_hex('000000')
				on_press: root.button_press(9)

			Button:
				size_hint: (0.2,0.2)
				font_size: 64
				color: utils.get_color_from_hex('000000')
				text: "X"
				background_normal:''
				background_color: utils.get_color_from_hex('03fc84')
				on_press: root.multiply_sign()


			Button:
				size_hint: (0.2,0.2)
				font_size: 64
				color: utils.get_color_from_hex('03fc84')
				text: "4"
				background_color: utils.get_color_from_hex('000000')
				on_press: root.button_press(4)

			Button:
				size_hint: (0.2,0.2)
				font_size: 64
				color: utils.get_color_from_hex('03fc84')
				text: "5"	
				background_color: utils.get_color_from_hex('000000')
				on_press: root.button_press(5)

			Button:
				size_hint: (0.2,0.2)
				font_size: 64
				color: utils.get_color_from_hex('03fc84')
				text: "6"
				background_color: utils.get_color_from_hex('000000')
				on_press: root.button_press(6)

			Button:
				size_hint: (0.2,0.2)
				font_size: 64
				color: utils.get_color_from_hex('000000')
				text: "-"
				background_normal:''
				background_color: utils.get_color_from_hex('03fc84')
				on_press: root.subtract_sign()


			Button:
				size_hint: (0.2,0.2)
				font_size: 64
				color: utils.get_color_from_hex('03fc84')
				text: "1"
				background_color: utils.get_color_from_hex('000000')
				on_press: root.button_press(1)

			Button:
				size_hint: (0.2,0.2)
				font_size: 64
				color: utils.get_color_from_hex('03fc84')
				text: "2"	
				background_color: utils.get_color_from_hex('000000')
				on_press: root.button_press(2)

			Button:
				size_hint: (0.2,0.2)
				font_size: 64
				color: utils.get_color_from_hex('03fc84')
				text: "3"
				background_color: utils.get_color_from_hex('000000')
				on_press: root.button_press(3)

			Button:
				size_hint: (0.2,0.2)
				font_size: 64
				color: utils.get_color_from_hex('000000')
				text: "+"
				background_normal:''
				background_color: utils.get_color_from_hex('03fc84')
				on_press: root.add_sign()

			Button:
				size_hint: (0.2,0.2)
				font_size: 64
				color: utils.get_color_from_hex('03fc84')
				text: "+/-"
				background_color: utils.get_color_from_hex('000000')
				on_press: root.pos_neg()

			Button:
				size_hint: (0.2,0.2)
				font_size: 64
				color: utils.get_color_from_hex('03fc84')
				text: "0"	
				background_color: utils.get_color_from_hex('000000')
				on_press: root.button_press(0)
			Button:
				size_hint: (0.2,0.2)
				font_size: 64
				color: utils.get_color_from_hex('03fc84')
				text: "."
				background_color: utils.get_color_from_hex('000000')
				on_press: root.dot()

			Button:
				size_hint: (0.2,0.2)
				font_size: 64
				color: utils.get_color_from_hex('000000')
				text: "="
				background_normal:''
				background_color: utils.get_color_from_hex('03fc84')
				on_press: root.equals()


				
